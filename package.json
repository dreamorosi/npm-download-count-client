{
    "name": "npm-download-count-client",
    "version": "0.0.1",
    "description": "An opinionated client for the npm package download counts API written in TypeScript",
    "scripts": {
        "init-environment": "husky install",
        "build": "tsup",
        "lint": "eslint --ext .ts,.cjs --no-error-on-unmatched-pattern .",
        "lint-fix": "eslint --fix --ext .ts,.cjs --no-error-on-unmatched-pattern .",
        "test": "vitest --run --coverage"
    },
    "type": "module",
    "keywords": [
        "npm",
        "ts",
        "typescript",
        "api",
        "client"
    ],
    "author": {
        "name": "Andrea Amorosi",
        "email": "dreamorosi@gmail.com"
    },
    "license": "MIT-0",
    "engines": {
        "node": ">=18"
    },
    "lint-staged": {
        "*.ts": "npm run lint-fix",
        "*.cjs": "npm run lint-fix"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json",
        "./README.md": "./README.md",
        "./LICENSE": "./LICENSE"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "@vitest/coverage-c8": "^0.30.1",
        "esbuild": "^0.17.16",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-node": "^0.3.7",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.2",
        "prettier": "^2.8.7",
        "tsup": "^6.7.0",
        "typescript": "^5.0.4",
        "vitest": "^0.31.0"
    },
    "dependencies": {
        "date-fns": "^2.30.0",
        "undici": "^5.22.1",
        "zod": "^3.21.4"
    }
}
